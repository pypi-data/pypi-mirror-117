{# vim: set shiftwidth=2 tabstop=2 syntax=html : #}
<div class="task_container">
  <div class="surround">
    <h1 id="{{taskid}}" class="task_header">
      Instructions for {{taskid}}
    </h1>
    (produced at {{timestamp|timestamp}})
  </div>
  <div id="{{taskid}}_body" class="task_body with_rubric">

    <!-- The rubric report -->
    <section class="task_feedback surround">
      <h2>Instructions</h2>
      {{instructions}}
    </section>

    <!-- Rendered code -->
    <div class="sticky_context" id="{{taskid}}_rubric_context">
      <section
       class='sticky_bin surround'
       id="{{taskid}}_rubric"
       tabindex="0"
       aria-label="The rubric"
       aria-live="polite"
      >
        <h2 class="bin_label" tabindex="0">Rubric</h2>
        {{rendered_rubric}}
      </section>
    </div>

    <!-- Context results -->
    <div class="sticky_context" id="{{taskid}}_snippets_context">
      <section
       class='sticky_bin surround'
       id="{{taskid}}_snippets"
       tabindex="0"
       aria-label="Examples"
       aria-live="polite"
      >
        <h2 class="bin_label" tabindex="0">Examples</h2>
          {% for snippet in snippets %}
            {{snippet|safe}}
          {% endfor %}
      </section>
    </div>
    
  </div>
</div>
